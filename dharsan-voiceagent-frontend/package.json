{
  "name": "dharsan-voiceagent-frontend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "type-check": "tsc --noEmit",
    "lint": "eslint .",
    "preview": "vite preview",
    "validate:env": "node scripts/validate-env.js",
    "validate:security": "npm run validate:env && npm run lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:voice": "jest --testNamePattern='Voice Functionality'",
    "test:voice:watch": "jest --testNamePattern='Voice Functionality' --watch",
    "test:components": "jest --testPathPattern=componentTests.test.tsx",
    "test:hooks": "jest --testPathPattern=hookTests.test.tsx",
    "test:integration": "jest --testPathPattern=voiceIntegration.test.ts",
    "test:basic": "jest --testPathPattern=basic.test.ts",
    "test:all": "jest --passWithNoTests",
    "test:ci": "jest --ci --coverage --watchAll=false"
  },
  "dependencies": {
    "chart.js": "^4.5.0",
    "opus-decoder": "^0.7.10",
    "react": "^18.3.1",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^18.3.1",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@eslint/js": "^8.57.0",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^15.0.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.12",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.3",
    "@vitejs/plugin-react": "^4.6.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "ts-jest": "^29.1.2",
    "typescript": "~5.8.3",
    "typescript-eslint": "^7.0.0",
    "vite": "^5.4.12"
  }
}
